{% block list_paginator_perpage %}
{{ echo_block("list_paginator_perpage") }}
    {{ echo_if( builder.ModelClass ~ "s.haveToPaginate") }}
    <div class="btn-group input-prepend">
        <div class="btn btn-reset">{{ echo_trans('paginator.list.maxPerPage') }}</div>
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            {{ echo_twig( builder.ModelClass ~ 's.maxPerPage') }} <span class="caret"></span>
        </a>
        <ul class="dropdown-menu pull-right" style="min-width: 60px;">
            {{ echo_for('perPage', '[10, 25, 50, 75, 100]') }}
            <li>
                <a href="{{ echo_path(builder.routePrefixWithSubfolder ~ '_' ~ bundle_name ~ ( builder.BaseGeneratorName ? "_" ~ builder.BaseGeneratorName : "" ) ~ '_list', '{perPage: perPage}') }}">{{ echo_twig('perPage') }}</a>
            </li>
            {{ echo_endfor() }}
        </ul>
    </div>
    {{ echo_endif() }}
{{ echo_endblock() }}
{% endblock %}

