{% extends '../CommonAdmin/EditAction/EditBuilderAction.php.twig' %}

{% block orm_use %}
use Doctrine\DBAL\LockMode;
{% endblock %}

{% block getObject -%}
    protected function getObject($pk, $version = null)
    {
        return $this->getDoctrine()
                    ->getManager({{ entity_manager|enquote|default('') }})
                    ->getRepository('{{ model }}')
                    ->find($pk, {{ lock_mode|default('LockMode::NONE') }}, $version);
    }
{% endblock %}

{% block saveObject -%}
    protected function saveObject(\{{ model }} ${{ builder.ModelClass }})
    {
        $em = $this->getDoctrine()->getManager({{ entity_manager|enquote|default('') }});
        $em->persist(${{ builder.ModelClass }});
        $em->flush();
    }
{% endblock %}
